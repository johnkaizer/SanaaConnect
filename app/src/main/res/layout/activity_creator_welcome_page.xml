<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreatorWelcomePage"
    android:background="@color/light_gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:background="@drawable/border">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_logo"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/ic_logo2"
            android:maxWidth="180dp"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_app_name"
            android:text="SanaaConnect"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_below="@+id/imageView_logo"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_main_head"
            android:text="Elevate Your Craft. Get Started Today"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/textView_app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"/>


        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/button_login"
            android:text="Login"
            android:backgroundTint="@color/colorAccent2"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/textView_main_head" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_register"
            android:text="Dont have an account?"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/button_login"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_register_link"
            android:text="@string/register"
            android:textStyle="bold"
            android:textColor="@color/colorAccent2"
            android:textAlignment="center"
            android:layout_marginBottom="50dp"
            android:layout_below="@+id/textView_register"/>

    </RelativeLayout>




</ScrollView>